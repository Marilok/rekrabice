{
    "extends": [
        "next/core-web-vitals",
        "airbnb"
    ],
    "parser": "@typescript-eslint/parser",
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "parserOptions": {
                "project": [
                    "./tsconfig.json"
                ]
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": "error",
        "prefer-const": "error",
        "no-const-assign": "error",
        "react/react-in-jsx-scope": "off"
    }
}